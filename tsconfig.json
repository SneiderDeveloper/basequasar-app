{
  "extends": "@quasar/app-webpack/tsconfig-preset",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node"],
    "lib": ["es2019", "dom", "esnext"],
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue", 
    "node_modules/@imagina/**/*.ts", 
    "node_modules/@imagina/**/*.tsx", 
    "node_modules/@imagina/**/*.vue"
  ],
}