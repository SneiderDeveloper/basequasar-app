{
  "extends": "@quasar/app-webpack/tsconfig-preset",
  "exclude": ["src/modules", "src/boot", "src/config"],
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "target": "ES6",
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node"],
    "lib": ["es2019", "dom", "esnext"],
  },
  "include": [
    "src//*.ts",
    "src//.tsx",
    "src/**/.vue"
  ]
}
